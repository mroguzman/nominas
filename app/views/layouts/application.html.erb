<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- start: Meta -->
    <meta charset="utf-8" />
    <title>N贸minas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&subset=latin,cyrillic-ext,latin-ext' rel='stylesheet' type='text/css' />
    <!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <link id="ie-style" href="./css/ie.css" rel="stylesheet" />
    <![endif]-->
    <!--[if IE 9]>
    <link id="ie9style" href="./css/ie9.css" rel="stylesheet" />
    <![endif]-->
    <link rel="shortcut icon" href="./img/favicon.ico" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  </head>
<body>
  <!-- start: Header -->
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container-fluid">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        </a>
        <%= link_to "<span>EnN贸mina</span>".html_safe, root_path, :class => "brand" %>
        <!-- start: Header Menu -->
        <div class="nav-no-collapse header-nav">
          <ul class="nav pull-right">
            <!-- start: User Dropdown -->
            <li class="dropdown hidden-phone">
              <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                <%= current_user.name %>
                <span class="caret"></span>
              </a>
              <i class="halflings-icon white user"></i>
              <ul class="dropdown-menu notifications">
                <li>
                  <span class="dropdown-menu-title"><%= link_to  "Logout", session_path(current_user.id), method: :delete %></span>
                </li>
              </ul>
            </li>
            <!-- end: User Dropdown -->
          </ul>
        </div>
        <!-- end: Header Menu -->
      </div>
    </div>
  </div>
  <!-- start: Header -->
  <div class="container-fluid">
    <div class="row-fluid">
      <!-- start: Main Menu -->
      <div id="sidebar-left" class="span1">
        <div class="nav-collapse sidebar-nav">
          <ul class="nav nav-tabs nav-stacked main-menu">
            <li class="<%= active_if_controller(:dashboard) %>">
              <%= link_to(dashboard_index_path) do %>
                <i class="fa-icon-bar-chart"></i>
                <span class="hidden-tablet">Dashboard</span>
              <% end %>
            </li>
            <li class="<%= active_if_controller(:companies) %>">
              <%= link_to(show_or_new_company_path(current_user.company)) do %>
                <i class="fa-icon-briefcase"></i>
                <span class="hidden-tablet">Empresa</span>
              <% end %>
            </li>
            <li class="<%= active_if_controller(:employees) %>">
              <%= link_to(employees_path) do %>
                <i class="fa-icon-user"></i>
                <span class="hidden-tablet">Empleados</span>
              <% end %>
            </li>
            <li class="<%= active_if_controller(:payrolls) %>">
              <%= link_to(payrolls_path) do %>
                <i class="fa-icon-money"></i>
                <span class="hidden-tablet">N贸minas</span>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
      <!-- end: Main Menu -->
      <!-- start: Content -->
      <div id="content" class="span11">
          <%= yield %>
        <!-- end: Content -->
      </div>
      <!--/#content.span10-->
    </div>
    <!--/fluid-row-->
    <div class="clearfix"></div>
    <footer>
      <p>
        <span style="text-align:left;float:left">&copy; <a href="./tasks.html" target="_blank">EnN贸mina</a> 2013</span>
      </p>
    </footer>
    </div><!--/.fluid-container-->
  </body>
</html>
