<h1>Empleados</h1>

<table class="table table-striped table-bordered bootstrap-datatable datatable">
  <tr>
    <th>Nombre</th>
    <th>NIF</th>
    <th>Nº Seg Social</th>
    <th>Grupo de Cotización</th>
    <th>Categoría Profesional</th>
    <th></th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.name %></td>
    <td><%= employee.nif %></td>
    <td><%= employee.sec_social_number %></td>
    <td><%= employee.contribution_group.number %></td>
    <td><%= employee.contribution_group.professional_category %></td>
    <td>
      <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          Acciones
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Nueva Nómina", new_employee_payroll_path(employee) %></li>
          <li><%= link_to "Mostrar", employee %></li>
          <li><%= link_to "Editar", edit_employee_path(employee) %></li>
          <li><%= link_to "Eliminar", employee, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </div>
    </td>
  </tr>
<% end %>

</table>

<br />

<%= link_to "Nuevo empleado", new_employee_path, class: "btn" %>
