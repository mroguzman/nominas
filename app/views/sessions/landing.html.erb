<style type="text/css">
  body { background: url('/assets/bg-login.jpg') !important; }
</style>

<div id="landing_content">
  <h1>EnNómina</h1>
  <p class="description">EnNómina una aplicación fácil y sencilla para la creación de nóminas de tus empleados.</p>

  <p class="description">Pasa y descúbrela!</p>

  <p>
    <%= link_to "Login", new_session_path, class: "btn btn-primary btn-large" %>
    <%= link_to "Registrar", new_user_path, class: "btn btn-primary btn-large" %>
  </p>

  <p>
    <i class="fa-icon-facebook-sign"><%= link_to "Facebook", "http://www.facebook.com" %></i>
    <i class="fa-icon-twitter-sign"><%= link_to "Twitter", "http://www.twitter.com" %></i>
  </p>

  <% if flash[:alert] %>
    <p id="alert"><%= flash[:alert] %></p>
  <% end %>

  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>
</div>
