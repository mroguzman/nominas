<% years_for_payrolls(@payrolls).each do |year| %>

  <h2><%= year %></h2>

  <table class="table table-striped table-bordered bootstrap-datatable datatable">
    <tr>
      <th>Nombre empleado</th>
      <th>Fecha de inicio</th>
      <th>Fecha de fin</th>
      <th></th>
    </tr>

  <% @payrolls.by_year(year).each do |payroll| %>
    <tr>
      <td><%= payroll.employee.name %></td>
      <td><%= payroll.start_date %></td>
      <td><%= payroll.end_date %></td>
      <td>
        <div class="btn-group">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            Acciones
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Mostrar', payroll %></li>
            <li><%= link_to 'Generar PDF', payroll_path(payroll, format: :pdf), target: "_blank" %></li>
            <li><%= link_to 'Editar', edit_payroll_path(payroll) %></li>
            <li><%= link_to 'Eliminar', payroll, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
  </table>
<% end %>
