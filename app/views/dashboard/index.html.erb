<h1>Información para la la Empresa <%= current_user.company.name %></h1>

<table class="table table-striped table-bordered bootstrap-datatable datatable">
  <tr>
    <th>Fecha Ingreso</th>
    <th>Nº Trabajadores</th>
    <th>Nº Nóminas</th>
    <th>Cantidad total en nóminas</th>
  </tr>
  <tr>
    <td><%= current_user.company.created_at.strftime("%d/%m/%Y") %></td>
    <td><%= current_user.company.employees.count %></td>
    <td><%= current_user.company.payrolls.count %></td>
    <td><%= number_to_euros(current_user.company.payrolls.map(&:salario_liquido).sum) %></td>
  </tr>
</table>