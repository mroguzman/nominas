<style type="text/css">
  body { background: url('/assets/bg-login.jpg') !important; }
</style>

<div id="landing_content">
  <h1>EnNómina</h1>
</div>

<div class="row-fluid">
  <div class="login-box">
    <div class="icons">
      <a href="index.html"><i class="halflings-icon home"></i></a>
      <a href="#"><i class="halflings-icon cog"></i></a>
    </div>

    <h2>Crear Cuenta</h2>

    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(@user) do |f| %>
      <fieldset>
        <div class="input-prepend" title="Email">
          <span class="add-on"><i class="halflings-icon user"></i></span>
          <%= f.text_field :email, class: "input-large span10", placeholder: "Email" %>
        </div>

        <div class="clearfix"></div>
        <div class="input-prepend" title="Password">
          <span class="add-on"><i class="halflings-icon user"></i></span>
          <%= f.password_field :password, class: "input-large span10", placeholder: "Contraseña" %>
        </div>

        <div class="clearfix"></div>
        <div class="input-prepend" title="Password Confirmation">
          <span class="add-on"><i class="halflings-icon user"></i></span>
          <%= f.password_field :password_confirmation, class: "input-large span10", placeholder: "Confirmar Contraseña" %>
        </div>
        <div class="clearfix"></div>

        <div class="button-login">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </fieldset>
    <% end %>

  </div>
</div>
