<style type="text/css">
  body { background: url('/assets/bg-login.jpg') !important; }
</style>

<div class="row-fluid">
  <div class="login-box">
    <div class="icons">
      <a href="index.html"><i class="halflings-icon home"></i></a>
      <a href="#"><i class="halflings-icon cog"></i></a>
    </div>
    <h2>Crear Cuenta</h2>

  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset>
      <div class="input-prepend" title="Email">
        <span class="add-on"><i class="halflings-icon user"></i></span>
        <input class="input-large span10" name="email" id="email" type="text" placeholder="Email" />
      </div>
      <div class="clearfix"></div>
      <div class="input-prepend" title="Email">
        <span class="add-on"><i class="halflings-icon user"></i></span>
        <input class="input-large span10" name="password" id="password" type="text" placeholder="Contraseña" />
      </div>
      <div class="clearfix"></div>
      <div class="input-prepend" title="Email">
        <span class="add-on"><i class="halflings-icon user"></i></span>
        <input class="input-large span10" name="password_confirmation" id="password_confirmation" type="text" placeholder="Confirmar Contraseña" />
      </div>
      <div class="clearfix"></div>

      <div class="button-login">
        <%= f.submit class: "btn" %>
      </div>
    <div class="clearfix"></div>
  </fieldset>
  <% end %>
  </div>
</div>
